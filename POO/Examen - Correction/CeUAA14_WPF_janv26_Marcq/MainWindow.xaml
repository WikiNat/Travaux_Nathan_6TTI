<Window x:Class="CeUAA14_WPF_janv26_Marcq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CeUAA14_WPF_janv26_Marcq"
        mc:Ignorable="d"
       Title="MainWindow" Height="806" Width="732">
    <Grid x:Name="Joseph" Background="#FF5DB188">

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="SERPENT ET ECHELLES" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Foreground="Red" Grid.ColumnSpan="1" ></TextBlock>
        <StackPanel Grid.RowSpan="2" Grid.Column="2" Margin="0,10,0,0">
            <StackPanel  Background="#FFC3C23D">
                <TextBlock FontFamily="Arial Black" Text="Taille de la grille (Max 10)" FontSize="18" Height="50" TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="5,10,5,10" />
                <TextBox x:Name="txtTaille" Height="40" Width="150" Grid.ColumnSpan="2" Margin="5,0,5,15"/>
                <Button x:Name="btn" Click="ButtonClick" Grid.Row="1" Width="150" Content="CREER Grille" FontSize="26" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,25,10,15"/>
            </StackPanel>
            <StackPanel  Background="#FFC38F3D">
                <TextBlock FontFamily="Arial Black" Text="Symbole Joueur (p ou h)" FontSize="16" Height="50" TextWrapping="Wrap" Grid.ColumnSpan="2" TextAlignment="Left" HorizontalAlignment="Center" Margin="5,20,5,10"/>
                <TextBox Height="40" Width="150" Grid.ColumnSpan="2" Margin="10,10,10,20"/>
                <Button x:Name="btnSymbole" Grid.Row="1" Height="40" Width="140" Content="VALIDER" FontSize="26" Grid.ColumnSpan="2" Margin="5,0,5,15"/>
            </StackPanel>
            <StackPanel  Background="#FFB1B192">
                <TextBlock Text="Joueur" Width="100" FontSize="20" Margin="10,20,10,10" FontFamily="Arial Black"></TextBlock>
                <TextBlock   x:Name="txtQuiJoue" Text="Joueur " FontSize="28" Margin="10,0,10,0"></TextBlock>
                <Button x:Name="btnAvancer" Click="BtnAvancer_Click" Grid.Row="1" Height="40" Width="150" Content="LANCER Dé" FontSize="28" Grid.ColumnSpan="2" Margin="10,20,10,25"/>
                <TextBlock  x:Name="txtDe"  Text="Dé : 0" FontSize="18" FontFamily="Arial Black" Margin="15,5,5,10"></TextBlock>

            </StackPanel>
            <StackPanel  HorizontalAlignment="Center" >
                <Button x:Name="reset" Click="BtnReset_Click" Grid.Row="1" Height="40" Width="150" Content="RESET" FontSize="28" Grid.ColumnSpan="2" Margin="10,20,10,15"/>
            </StackPanel>
        </StackPanel>

        <Grid x:Name="Billy"  Grid.Row="1" Grid.Column="0" Height="550" >

        </Grid>
    </Grid>

</Window>
